<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="groceryItem"
            type="de.dabotz.shoppinglist.models.GroceryListItem"/>
        <variable
            name="handler"
            type="de.dabotz.shoppinglist.ShoppingItemFragment"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{groceryItem.name}"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Banane"
            tools:layout_editor_absoluteY="6dp"
            tools:layout_editor_absoluteX="151dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            tools:layout_editor_absoluteY="75dp"
            android:onClick="@{(view) -> handler.increase(view, groceryItem)}"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="@{String.valueOf(groceryItem.count)}"
            tools:text="15"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            tools:layout_editor_absoluteY="75dp"
            app:layout_constraintTop_toTopOf="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="75dp"
            android:onClick="@{(view) -> handler.decrease(view, groceryItem)}"
            app:layout_constraintTop_toTopOf="@+id/editText" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="52dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="52dp" />


    </android.support.constraint.ConstraintLayout>
</layout>